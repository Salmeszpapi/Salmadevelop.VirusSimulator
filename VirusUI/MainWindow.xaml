<Window x:Class="VirusUI.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:VirusUI"
        mc:Ignorable="d"
        Title="MainWindow" Height="900" Width="1200" 
        ResizeMode="NoResize" ShowInTaskbar="True" WindowStartupLocation="CenterScreen"
        WindowStyle="SingleBorderWindow">


    <Grid>

        <Canvas x:Name="myCanvas" 
            Background="LightBlue" 
            Focusable="True" 
            MouseLeftButtonDown="myCanvas_MouseLeftButtonDown"
            MouseWheel="myCanvas_MouseWheel"
            MouseMove="myCanvas_MouseMove">
            <Canvas.RenderTransform>
                <MatrixTransform/>
            </Canvas.RenderTransform>
            <TextBox x:Name="MyText" Canvas.Left="818" TextWrapping="Wrap" Text="TextBox" Canvas.Top="127" Width="120"/>
        </Canvas>
        <!--<Frame NavigationUIVisibility="Hidden" Source="/Pages/WelcomePage.xaml" />-->
    </Grid>
</Window>
