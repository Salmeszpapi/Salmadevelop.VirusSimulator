<html>
<head>
    <title>@ViewData["Title"]</title>
    <link href="~/css/site.css" />
</head>
<body>
    <!-- Section: Design Block -->
    <section class="text-center text-lg-start">
        <!-- Jumbotron -->
        <div class="container py-4">
            <div class="row g-0 align-items-center">
                <div class="col-lg-6 mb-5 mb-lg-0">
                    <div class="card cascading-right">
                        <div class="card-body p-5 shadow-5 text-center">
                            @{
                                if (@ViewData["Error"] != null)
                                {
                                    <div class="alert alert-danger" role="alert">
                                        <h3>@ViewData["Error"]</h3>
                                    </div>
                                }
                            }
                            <h2 class="fw-bold mb-5">Register now!</h2>
                            <form method="post" action="Register">
                                <!-- 2 column grid layout with text inputs for the first and last names -->
                                <!-- Email input -->
                                <div class="form-outline mb-4">
                                    <input type="text" name="Email" id="form3Example3" class="form-control" />
                                    <label class="form-label" for="form3Example3">User name</label>
                                </div>
                                <div class="row">
                                    <div class="col-md-6 mb-4">
                                        <div class="form-outline">
                                            <input type="password" name="Password1" id="form3Example1" class="form-control" />
                                            <label class="form-label" for="form3Example1">Password</label>
                                        </div>
                                    </div>
                                    <div class="col-md-6 mb-4">
                                        <div class="form-outline">
                                            <input type="password" name="Password2" id="form3Example2" class="form-control" />
                                            <label class="form-label" for="form3Example2">Password again</label>
                                        </div>
                                    </div>
                                </div>
                                <div class="d-flex justify-content-center">
                                    <button type="submit" class="btn btn-primary btn-block mb-4">
                                        Register
                                    </button>

                                </div>
                                <div class="align-middle">
                                    <label class="form-check-label" for="form2Example33">
                                        Or Login
                                    </label>
                                </div></br>
                                <!-- Submit button -->
                                <!-- Register buttons -->
                                <div class="align-middle">
                                    <button class="btn btn-primary btn-block mb-4" type="button" onclick="location.href='@Url.Action("Login")'">
                                        Log in
                                    </button>
                                </div>
                            </form>
                        </div>
                    </div>
                </div>

                <div class="col-lg-6 mb-5 mb-lg-0">
                    <div id="VideoDemoDiv" style="border-radius">
                        <video controls class="VideoDemo" loop="true" autoplay="autoplay" controls="controls" id="vid" muted>
                            <source src="Resources/Demo.mp4" type="video/mp4">
                        </video>
                    </div>
                </div>
            </div>
        </div>
        <!-- Jumbotron -->
    </section>
    <!-- Section: Design Block -->
</body>
</html>
<script>
    document.getElementById('vid').play();
</script>
